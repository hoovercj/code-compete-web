@page
@model CodeCompete.Pages.Players.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Players</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Player[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Player[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Player[0].ApplicationUser)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Player[0].Game)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Player[0].ProgrammingLanguage)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Player) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Game.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProgrammingLanguage.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PlayerId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.PlayerId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.PlayerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
