@page "{id:int}"
@model CodeCompete.Pages.Matches.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Match</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Match.Game)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Match.Game.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Match.PlayerMatches)
        </dt>
        <dd>
            @String.Join(", ", @Model.Match.PlayerMatches.Select(p => p.Player.Name).ToArray())
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Match.Result)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Match.Result)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Match.MatchId" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
