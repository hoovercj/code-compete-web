@page
@model CodeCompete.Pages.Matches.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Matches</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Match[0].Game)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Match[0].PlayerMatches)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Match[0].Result)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Match) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Game.Name)
            </td>
            <td>
                @String.Join(", ", item.PlayerMatches.Select(p => p.Player.Name).ToArray())
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Result)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.MatchId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.MatchId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.MatchId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
